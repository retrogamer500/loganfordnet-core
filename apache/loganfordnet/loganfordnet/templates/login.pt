<div metal:use-macro="load: include/layout.pt">
    <div metal:fill-slot="content">
        <h2>Log In</h2>
        
        <form method="post">
            <table>
                <tr>
                    <td>Username</td>
                    <td><input type="text" name="username"></td>
                </tr>
                <tr>
                    <td>Password</td>
                    <td><input type="password" name="password"></td>
                </tr>
                <tr>
                    <td></td>
                    <td><button class="buttonLight emphasis" type="submit">SUBMIT</button></td>
                </tr>
            </table>
        </form>
    </div>
</div>
